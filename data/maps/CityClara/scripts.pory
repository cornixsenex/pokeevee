script CityClara_EventScript_Senex {
	lockall
	faceplayer
	msgbox (CityClara_Text_Senex1, MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		msgbox (CityClara_Text_Senex2)
	}
	else {
		msgbox (CityClara_Text_Senex3)
	}
	closemessage
	releaseall
	end
}

