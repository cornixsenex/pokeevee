
const OBJ_EVENT_TEACHER = 1
const OBJ_EVENT_STUDENT1 = 2
const OBJ_EVENT_STUDENT2 = 3
const OBJ_EVENT_STUDENT3 = 4
const OBJ_EVENT_STUDENT4 = 5
const OBJ_EVENT_STUDENT5 = 6
