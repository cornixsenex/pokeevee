script BigIslandN_Script_JasonAtColchisCave {
	//FLAG Here
	if (!flag(FLAG_BIGISLAND_N_JASONCOLCHIS_INTRO)) {
		setflag (FLAG_BIGISLAND_N_JASONCOLCHIS_INTRO)
		faceplayer
		msgbox (BigIslandN_Text_OpenColchisCave1, MSGBOX_DEFAULT)
		closemessage
		applymovement (OBJ_EVENT_JASON, Common_Movement_FaceUp)
		waitmovement (0)
	}
	msgbox (BigIslandN_Text_OpenColchisCave2, MSGBOX_DEFAULT)
	closemessage
	specialvar (VAR_RESULT, GetPlayerFacingDirection)
	if (var(VAR_RESULT) == DIR_EAST) {
		applymovement (OBJ_EVENT_JASON, Common_Movement_FaceLeft)
	} else {
		applymovement (OBJ_EVENT_JASON, Common_Movement_FaceDown)
	}
	waitmovement (0)
	msgbox (BigIslandN_Text_OpenColchisCave3, MSGBOX_DEFAULT)
	closemessage

	//Ready to release Spearow
	if (var(VAR_ARGO_STATE) == 6) {
		//First have Jason react to the news - if it's news
		if (!flag(FLAG_BIGISLAND_N_JASON_OSTRACON)) {
			setflag (FLAG_BIGISLAND_N_JASON_OSTRACON)
			applymovement (OBJ_EVENT_JASON, Common_Movement_ExclamationMark)
			waitmovement (0)
			msgbox (BigIslandN_Text_Ostracon, MSGBOX_DEFAULT)
			closemessage

		}
		specialvar (VAR_RESULT, IsSpearowInParty)
		if (var(VAR_RESULT) == TRUE) {
			msgbox (BigIslandN_Text_ReleaseSpearow, MSGBOX_YESNO)
			if (var(VAR_RESULT) == YES) {
				special (ChoosePartyMon)
				waitstate
				if (var(VAR_0x8004) == PARTY_NOTHING_CHOSEN) {
					msgbox (BigIslandN_Text_DeclineReleaseSpearow, MSGBOX_DEFAULT)
					closemessage
				} else {
					specialvar (VAR_RESULT, ScriptGetPartyMonSpecies)
					if (var(VAR_RESULT) != SPECIES_SPEAROW) {
						msgbox (BigIslandN_Text_DeclineReleaseSpearow, MSGBOX_DEFAULT)
						closemessage
					} else {
						special (BufferMonNickname)
						msgbox (BigIslandN_Text_ReleasedSpearow, MSGBOX_DEFAULT)
						closemessage
						special (ReleaseChosenMon)
						call (BigIslandN_Script_EnterColchis)
					}
				}
			} else {
				msgbox (BigIslandN_Text_DeclineReleaseSpearow, MSGBOX_DEFAULT)
				closemessage
			}
		}
	}
	applymovement (OBJ_EVENT_JASON, Common_Movement_FaceUp)
	waitmovement (0)
	releaseall
	end
}

script BigIslandN_Script_EnterColchis {
	setflag (FLAG_SAFE_FOLLOWER_MOVEMENT)
	setvar (VAR_0x8004, 1)  // vertical pan
	setvar (VAR_0x8005, 1)  // horizontal pan
	setvar (VAR_0x8006, 8)  // num shakes
	setvar (VAR_0x8007, 5)  // shake delay
	special (ShakeCamera)
	waitstate
	playse (SE_EFFECTIVE)
	call (BigIslandN_Script_ShowColchisCave)
	special (DrawWholeMapView)
	delay (30)
	setvar (VAR_ARGO_STATE, 7)
	waitse
	//Jason says you've done it hurry lets get the fleece
	applymovement (OBJ_EVENT_JASON, Common_Movement_ExclamationMark)
	waitmovement (0)
	msgbox (BigIslandN_Text_OpenColchisCave4, MSGBOX_DEFAULT)
	closemessage
	//Exits
	applymovement (OBJ_EVENT_JASON, Common_Movement_WalkUp)
	waitmovement (0)

	clearflag (FLAG_SAFE_FOLLOWER_MOVEMENT)
	releaseall
	call (BigIslandN_Script_ShowArgo7)
	
	//Player follows
	//Story continues in next map :/
	end
}

