mapscripts BigIslandN_MapScripts {

	MAP_SCRIPT_ON_TRANSITION {

        //Handle Dynamic Map
		specialvar (VAR_TEMP_5, GetDynamicMapSec_BigIslandN_F)
        //Setup for story based object placement - BELOW
		//2 = Boat has landed, Jason waits for journey to Colchis script
		if (var(VAR_ARGO_STATE) == 2) {
			call (BigIslandN_Script_ShowArgo2)
		//3 = Jason at the Cave Entrance, Phil abducted, Argonauts getting bored
		//7 = Colchis open -> Jason hidden inside colchis
		//Need to ammend if you can return from Colchis before it's time to Hide Argo
		} elif (var(VAR_ARGO_STATE) < 7 && var(VAR_ARGO_STATE) != 1) {
			call (BigIslandN_Script_ShowArgo3)
		} elif (var(VAR_ARGO_STATE) == 7) {
			call (BigIslandN_Script_ShowArgo7)
		} elif (var(VAR_ARGO_STATE) == 14) {
			call (BigIslandN_Script_ShowArgoExit)
		} else {
			call (BigIslandN_Script_HideArgo)
		}
	}

	MAP_SCRIPT_ON_LOAD {
		if (var(VAR_ARGO_STATE) < 7 || var(VAR_ARGO_STATE) > 18) {
			call (BigIslandN_Script_HideColchisCave)
		}
		end
	}

	MAP_SCRIPT_ON_FRAME_TABLE [
		VAR_ARGO_STATE, 14: BigIslandN_Script_ArgoExit
		VAR_ARGO_STATE, 18: BigIslandN_Script_EscapeColchis
	]

}

