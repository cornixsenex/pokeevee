script BigIslandN_Script_ArgoExit {
	lockall
	
	//Player down to Jason and Medea
	applymovement (OBJ_EVENT_ID_PLAYER, BigIslandN_Movement_PlayerExitColchis)
	waitmovement (0)

	//! POINTS
	applymovement (OBJ_EVENT_ID_PLAYER, Common_Movement_ExclamationMark)
	waitmovement (0)

	//Hide Cave
	
	//Set vars for ShakeCamera
	setvar (VAR_0x8004, 1)
	setvar (VAR_0x8005, 1)
	setvar (VAR_0x8006, 16)
	setvar (VAR_0x8007, 3)
	
	special (ShakeCamera)
	waitstate
	playse (SE_EFFECTIVE)
	waitse
	call (BigIslandN_Script_HideColchisCave)
	special (DrawWholeMapView)
	delay (30)
	
	//M: The way is forever shut
	load_field_pic(FIELD_PIC_MEDEA, 190, 98)
	msgbox (BigIslandN_Text_MedeaExitColchis, MSGBOX_DEFAULT)
	destroy_field_pic(FIELD_PIC_MEDEA)

	//Jason: Let us be off
	load_field_pic (FIELD_PIC_JASON, 190, 99)
	msgbox (BigIslandN_Text_JasonExitColchis, MSGBOX_DEFAULT)
	closemessage
	destroy_field_pic (FIELD_PIC_JASON)
	//Walk to Argo
	applymovement (OBJ_EVENT_ID_PLAYER, BigIslandN_Movement_ExeuntArgo1)
	applymovement (OBJ_EVENT_JASON, BigIslandN_Movement_ExeuntArgo1)
	applymovement (OBJ_EVENT_MEDEA, BigIslandN_Movement_ExeuntArgo1)
	waitmovement (0)
	applymovement (OBJ_EVENT_JASON, Common_Movement_WalkRight)
	applymovement (OBJ_EVENT_MEDEA, Common_Movement_WalkRight)
	waitmovement (0)
	applymovement (OBJ_EVENT_ID_PLAYER, Common_Movement_WalkDown)
	applymovement (OBJ_EVENT_JASON, Common_Movement_WalkRight)
	applymovement (OBJ_EVENT_MEDEA, Common_Movement_WalkRight)
	waitmovement (0)
	applymovement (OBJ_EVENT_ID_PLAYER, BigIslandN_Movement_ExeuntArgo2)
	applymovement (OBJ_EVENT_JASON, BigIslandN_Movement_ExeuntArgo2)
	applymovement (OBJ_EVENT_MEDEA, BigIslandN_Movement_ExeuntArgo2)
	waitmovement (0)

	//Jason speech to the crew: Our quest is won, meet Medea, honor Jason
	load_field_pic (FIELD_PIC_JASON, 190, 99)
	msgbox (BigIslandN_Text_JasonExeunt1, MSGBOX_DEFAULT)
	destroy_field_pic (FIELD_PIC_JASON)

	msgbox (BigIslandN_Text_ThreeCheers, MSGBOX_DEFAULT)

	load_field_pic (FIELD_PIC_JASON, 190, 99)
	msgbox (BigIslandN_Text_JasonExeunt2, MSGBOX_DEFAULT)
	closemessage
	destroy_field_pic (FIELD_PIC_JASON)
	
	//Crew exit Jason and Medea into position
	applymovement (OBJ_EVENT_JASON, BigIslandN_Movement_JasonMedeaExeunt)
	applymovement (OBJ_EVENT_MEDEA, BigIslandN_Movement_JasonMedeaExeunt)
	applymovement (OBJ_EVENT_CASTOR, BigIslandN_Movement_DioscuriExeunt)
	applymovement (OBJ_EVENT_POLLUX, BigIslandN_Movement_DioscuriExeunt)
	applymovement (OBJ_EVENT_THESEUS, BigIslandN_Movement_TheseusExeunt)
	applymovement (OBJ_EVENT_ORPHEUS, BigIslandN_Movement_OrpheusExeunt)
	waitmovement (0)

	//Jason turns back
	applymovement (OBJ_EVENT_JASON, Common_Movement_FaceDown)
	waitmovement (0)
	
	//J: visit us in Bulbus
	load_field_pic (FIELD_PIC_JASON, 190, 99)
	msgbox (BigIslandN_Text_JasonExeunt3, MSGBOX_DEFAULT)
	closemessage
	destroy_field_pic (FIELD_PIC_JASON)
	
	//They exit
	applymovement (OBJ_EVENT_JASON, BigIslandN_Movement_DioscuriExeunt)
	applymovement (OBJ_EVENT_MEDEA, BigIslandN_Movement_DioscuriExeunt)
	waitmovement (0)

	//Set vars and flags
	setvar (VAR_ARGO_STATE, 20)
	call (BigIslandN_Script_HideArgo)

	releaseall
	end
}

