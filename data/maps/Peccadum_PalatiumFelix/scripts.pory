script Peccadum_PalatiumFelix_Script_BlueRouletteEnd  {
    //see you again
    msgbox (CasinoDealer_Text_Bye)
    //face dealer(s) down
    applymovement (OBJ_EVENT_BRDEALER1, Common_Movement_FaceDown)
    applymovement (OBJ_EVENT_BRDEALER2, Common_Movement_FaceDown)
    waitmovement (0)
    closemessage
    release
    end
}
    


