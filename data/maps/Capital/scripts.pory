		waitmovement (0)
		applymovement (OBJ_EVENT_ID_GIO, Capital_Movement_GioR2)
		applymovement (OBJ_EVENT_ID_PERSIAN, Capital_Movement_PersianR2)
		applymovement (OBJ_EVENT_ID_MEWTWO_ARMOR, Capital_Movement_MewtwoR3)
