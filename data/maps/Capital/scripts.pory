		case 1:
		case 2:
			applymovement (OBJ_EVENT_ID_CICERO, Capital_Movement_CiceroR1)
			applymovement (OBJ_EVENT_ID_SOLDIER2, Capital_Movement_Soldier2R1)
			applymovement (OBJ_EVENT_ID_SOLDIER3, Capital_Movement_Soldier3R1)
