script  DesertTemple_4F_EventScript_ClearPuzzle {
	setflag (FLAG_TEMP_1)
	call (DesertTemple_4F_EventScript_SetAllVars)
	applymovement (OBJ_EVENT_ID_PLAYER, Common_Movement_ExclamationMark)
	waitmovement (0)
	delay(25)
	removeobject (2)
	delay(25)
	removeobject (3)
	delay(25)
	removeobject (4)
	delay(25)
	removeobject (5)
	delay(25)
	removeobject (1)
	delay(25)
	playse (SE_FU_ZAKU)
	waitse
	return
}




