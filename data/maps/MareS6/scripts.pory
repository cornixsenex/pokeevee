			closemessage
            //fade screen
			fadescreenswapbuffers (FADE_TO_WHITE)
            //sound effect?
			playse (MUS_HEAL)
			waitse
            //remove V
			removeobject (LOCALID_MARES6_POOCHYENA)
			setobjectxyperm (LOCALID_MARES6_POOCHYENA, 0, 0)
			setobjectmovementtype (LOCALID_MARES6_POOCHYENA, MOVEMENT_TYPE_INVISIBLE)
			addobject (LOCALID_MARES6_POOCHYENA)
            //add sailor to correct location
			removeobject (LOCALID_MARES6_HIKER)
			setobjectxyperm (LOCALID_MARES6_HIKER, 59, 45)
			specialvar (VAR_RESULT, GetPlayerFacingDirection)
			switch (var(VAR_RESULT)) {
				case DIR_SOUTH:
					setobjectmovementtype (LOCALID_MARES6_HIKER, MOVEMENT_TYPE_FACE_UP)
				case DIR_EAST:
					setobjectmovementtype (LOCALID_MARES6_HIKER, MOVEMENT_TYPE_FACE_LEFT)
				case DIR_WEST:
					setobjectmovementtype (LOCALID_MARES6_HIKER, MOVEMENT_TYPE_FACE_RIGHT)
				case DIR_NORTH:
				default:
					setobjectmovementtype (LOCALID_MARES6_HIKER, MOVEMENT_TYPE_FACE_DOWN)
			}
			addobject (LOCALID_MARES6_HIKER)
			//fade back
			fadescreenswapbuffers (FADE_FROM_WHITE)
			//S: Thanks for helping me. Cant wait to get home
			msgbox (MareS6_Text_HikerRestored)
			msgbox (MareS6_Text_GenericRestored)
			closemessage 
			//fade black
			fadescreenswapbuffers (FADE_TO_BLACK)
			//remove S
			removeobject (LOCALID_MARES6_HIKER)
			setobjectxyperm (LOCALID_MARES6_HIKER, 0, 0)
			setobjectmovementtype (LOCALID_MARES6_HIKER, MOVEMENT_TYPE_FACE_LEFT)
			addobject (LOCALID_MARES6_HIKER)
			//fade back
			fadescreenswapbuffers (FADE_FROM_BLACK)
            //setflag
			setflag (FLAG_MARES6_RESTORED_POOCHYENAHIKER)
			//Check if all restored
			call (MareS6_Script_CheckAllRestored)
			//fin
			end
        }
    }
}

script MareS6_Script_CheckAllRestored {
	if (	
			flag(FLAG_MARES6_RESTORED_SHINXSAILOR) &&
			flag(FLAG_MARES6_RESTORED_TURTWIGCAMPER) && 
			flag(FLAG_MARES6_RESTORED_TORCHICMAN3) && 
			flag(FLAG_MARES6_RESTORED_SNUBBULLOLDMAN2) && 
			flag(FLAG_MARES6_RESTORED_POOCHYENAHIKER) 
		) {
		setvar (VAR_ULYSSES_STATE, 12)
	}
	return
}

//This is the special tree
script MareS6_Script_PinaFruitTree {
    //setup special Moly Tree
    setflag (FLAG_TEMP_3)
    //generic Pina Tree
    call (MareS6_Script_PinaTree)
}

//These are the normal trees
script MareS6_Script_PinaTree {
    //Check if player mons have headbutt
    specialvar (VAR_RESULT, CheckHeadbutt)
    if (var(VAR_RESULT) == YES) {
        //Player Can Headbutt
        msgbox (MareS6_Text_WantToHeadbutt, MSGBOX_YESNO)
        if (var(VAR_RESULT) == YES) {
            call (MareS6_Script_HeadbuttTree)
        }
    } else {
        //player cannot headbutt
        msgbox (MareS6_Text_TreeIsHeadbuttable)
    }
    closemessage
    end
}

//The guy next to the fruit tree
script MareS6_Script_FruitFan {
    faceplayer
    //before fruit grows
    if (var(VAR_ULYSSES_STATE) < 8) {
        msgbox (MareS6_Text_FruitFan1)
    }
    //while fruit is growing
    elif (var(VAR_ULYSSES_STATE) == 8) {
        msgbox (MareS6_Text_FruitFan2)
    }
    //after you took fruit (battle?)
    else {
		if (!defeated(TRAINER_PINA_FRUIT_FAN)) {
			msgbox (MareS6_Text_PinaFruitFanPre)
			closemessage
			trainerbattle_no_intro (TRAINER_PINA_FRUIT_FAN, MareS6_Text_PinaFruitFanLost)
		} else {
			if (var(VAR_ULYSSES_STATE) < 13) {
				msgbox (MareS6_Text_PinaFruitFanPost)
			} else {
				msgbox (MareS6_Text_PinaFruitFanPost2)
			}
		}
    }
    closemessage
    unfaceplayer
	end
}

//NOTE Headbutt trees have not been added yet to expansion. I expect they will be but until then I just won't have actual normal encounters here just the special case BUT in the finished product all the trees on this island should be headbuttable, normally Execute but other stuffs sometimes yknow
script MareS6_Script_HeadbuttTree {
    //setup headbutt message
    bufferpartymonnick (STR_VAR_1, VAR_0x8004)
    buffermovename (STR_VAR_2, MOVE_HEADBUTT)
    //M: mon used headbutt
    msgbox (Text_MonUsedFieldMove)
	closemessage
    //check is follower
	specialvar (VAR_RESULT, IsMonFollower)
    ////setfieldeffectargument (3, VAR_0x8004) //skip pose if so
    if (var(VAR_RESULT) == TRUE) {
		setflag (FLAG_SAFE_FOLLOWER_MOVEMENT) 
        call (EventScript_FollowerFieldMove)
		clearflag (FLAG_SAFE_FOLLOWER_MOVEMENT)
		updatefollowingmon
	}
    //do headbutt
    playse (SE_M_HEADBUTT)
    waitse
    //check if it's Moly Fruit or regular
    if (flag(FLAG_TEMP_3) && var(VAR_ULYSSES_STATE) == 8) {
        call (MareS6_Script_PinaFruit)
    } else {
        //just placeholder battle - make it better of course
        setwildbattle (SPECIES_EXEGGCUTE, 7)
		dowildbattle
    }
    //reset moly tree flag
    clearflag (FLAG_TEMP_3)
    //fin
	releaseall
    end
}

//When the player gets the pina fruit
script MareS6_Script_PinaFruit {
    //alert player
    applymovement (LOCALID_PLAYER, Common_Movement_ExclamationMark)
    waitmovement (0)
    //falling sound
    playse (SE_FALL)
    waitse
    //metatiles
	setmetatile (16, 60, METATILE_BigIsland_SandPalmNoFruitL, FALSE)
	setmetatile (17, 60, METATILE_BigIsland_SandPalmNoFruitC, FALSE)
	setmetatile (18, 60, METATILE_BigIsland_SandPalmNoFruitR, FALSE)
    special (DrawWholeMapView)
    //fruit fall message
    msgbox (MareS6_Text_PinaFruitFell)
    closemessage
    //give item
    giveitem (ITEM_PINA_FRUIT)
    closemessage
    //setvar
    setvar (VAR_ULYSSES_STATE, 9)
    //fin
    return
}


