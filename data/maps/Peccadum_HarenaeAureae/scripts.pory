const OBJ_EVENT_DANCER = 1

mapscripts Peccadum_HarenaeAureae_MapScripts {}



script Peccadum_HarenaeAureae_Script_Dancer {
    lock
    faceplayer
    msgbox (Peccadum_HarenaAureae_Text_Dancer1)
    showmoneybox (17, 0)
    msgbox (Peccadum_HarenaAureae_Text_TipDancer, MSGBOX_YESNO)
