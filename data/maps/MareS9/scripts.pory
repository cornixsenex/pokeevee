mapscripts MareS9_MapScripts {

    MAP_SCRIPT_ON_TRANSITION {
        //Handle Dynamic Map
		specialvar (VAR_TEMP_5, GetDynamicMapSec_MareS9_F)
        //Init state Aeneas shipwrecked
        if (var(VAR_AENEID_STATE) == 0) {
            call (MareS9_Script_SetupAeneid0)
        }
        //Tyrians fixing Pristis
        if (var(VAR_AENEID_STATE) == 1) {
            call (MareS9_Script_SetupAeneid1)
        }
        //Funeral Games
        if (var(VAR_AENEID_STATE) == 2) {
            call (MareS9_Script_SetupAeneid2)
        }
    }

}

