script MareS8_Script_KecleonBattle {
	setflag (FLAG_SYS_CTRL_OBJ_DELETE)
	setwildbattle (SPECIES_KECLEON, 13)
	dowildbattle
	clearflag (FLAG_SYS_CTRL_OBJ_DELETE)
	return
}

script MareS8_Script_Kecleon1 {
